doctype html
html
  head
    title Login
    link(rel="stylesheet" href="/tailwind.css")
  body.flex.items-center.justify-center.min-h-screen.bg-gray-100
    form(action="/auth/login" method="post" class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm")
      h1.text-2xl.font-bold.mb-6.text-center Login
      div(class="mb-4")
        label(for="email" class="block text-sm font-medium text-gray-700 mb-1") Email:
        input(type="text" name="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
      div(class="mb-6")
        label(for="password" class="block text-sm font-medium text-gray-700 mb-1") Password:
        input(type="password" name="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
      div
        button(type="submit" class="button w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") Login
