doctype html
html
  head
    title Login
  body
    form(action="/auth/login" method="post")
      div
        label(for="email") Email:
        input(type="text" name="email" id="email")
      div
        label(for="password") Password:
        input(type="password" name="password" id="password")
      div
        button(type="submit") Login

