extends layout

block title 
  title Image List

block content
  h1 Image List

  a(href="/image/upload") Upload

  form(action="/image/search" method="GET")
    //- input(type="text" id='search' name="search" placeholder="Search images by name" oninput="debounceSearch()")
    input(type="text" id='search' name="search" placeholder="Search images by name")
    button(type="button", onClick='runSearch()') Search

  ul
    each image in images
        li
          h3
            a(href="#", onclick=`viewImage("${image.id}")`)= image.filename
          img(src=`data:image/jpeg;base64,${image.image.toString('base64')}`, alt=image.filename, width="200", onclick=`viewImage("${image.id}")`, style="cursor: pointer;")

    script.
      async function viewImage(id) {
        const token = getCookie('token');

        try {
          const response = await fetch(`/image/${id}`, {
            method: 'GET',
            headers: {
              'Authorization': `Bearer ${token}`,
              'Content-Type': 'application/json',
            }
          });
          console.log(response);
          if (response.ok) {
            window.location.href = `/image/${id}`;
          } else {
            alert('Failed to view the image.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('An error occurred while viewing the image.');
        }
      }

      let debounceTimer;
      function debounceSearch() {
        clearTimeout(debounceTimer);  // Clear the previous timer
        debounceTimer = setTimeout(runSearch, 300);  // Set a new timer (e.g., 300ms)
      }

      async function runSearch() {
        const searchQuery = document.getElementById('search').value;
        
        if (searchQuery.length < 2) {
          return;  // Do nothing if the search query has fewer than 2 characters
        }

        const token = getCookie('token');
        const response = await fetch(`/image/images_list?searchQuery=${encodeURIComponent(searchQuery)}`, {
          method: 'GET',
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });

        if (response.ok) {
          window.location.href = `/image/images_list?searchQuery=${encodeURIComponent(searchQuery)}`;
        } else {
          alert('Failed to search images.');
        }
      }

      function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
        return null;
      }
